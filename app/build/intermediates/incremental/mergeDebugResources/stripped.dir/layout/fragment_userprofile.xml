<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:background="@color/transparency"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:src="@drawable/addpost_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/adjustBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:textColor="#B6B6B6"
        android:layout_marginRight="16dp"
        android:text="완료"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" >

        <ImageView
            android:id="@+id/userImg"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:src="@drawable/petimg" />

        <ImageButton
            android:id="@+id/userImgBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="47dp"
            android:backgroundTint="@color/transparency"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:layout_alignEnd="@+id/userImg"
            android:layout_alignRight="@+id/userImg"
            android:src="@drawable/addpet_photo" />


    </RelativeLayout>

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="핀더가든 님,\n안녕하세요!"
        android:textColor="#3F3F3F"
        android:textSize="17dp"
        android:textStyle="bold"
        android:lineSpacingExtra ="3dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정이름"
            android:textStyle="bold"
            android:textColor="#5A5A5A"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_marginTop="18dp"
            android:singleLine="true"
            android:backgroundTint="@color/transparency"
            android:hint="계정이름"/>

        <ImageView
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/addpost_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="휴대폰 번호"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="#5A5A5A"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/userPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_marginTop="18dp"
            android:singleLine="true"
            android:backgroundTint="@color/transparency"
            android:hint="휴대폰 번호"/>

        <ImageView
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/addpost_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그아웃"
            android:paddingRight="30dp"
            android:layout_marginTop="23dp"
            android:textStyle="bold"
            android:textColor="#5A5A5A"
            android:textSize="15dp"/>

        <ImageView
            android:layout_marginTop="23dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/addpost_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/exituser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원탈퇴하기"
            android:paddingRight="30dp"
            android:layout_marginTop="23dp"
            android:textStyle="bold"
            android:textColor="#5A5A5A"
            android:textSize="15dp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>