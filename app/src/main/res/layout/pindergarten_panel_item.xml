<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@color/transparency"
    android:elevation="4dp"
    android:layout_marginHorizontal="4dp"
    card_view:layout_constraintBottom_toBottomOf="parent"
    card_view:layout_constraintStart_toStartOf="parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView7"
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:layout_marginTop="10dp"
        card_view:cardCornerRadius="15dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/pindergartenImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:scaleType="fitCenter" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="right|top"
            android:layout_marginRight="12dp"
            card_view:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/pindergartenDistance"
                android:layout_width="49dp"
                android:layout_height="20dp"
                android:background="#8C2B2B2B"
                android:text="2.2Km"
                android:textSize="11dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="0dp"
                android:scaleType="fitCenter" />
        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/pindergartenLike"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/transparency"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/post_liked"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/cardView7" />


    <TextView
        android:id="@+id/pindergartenName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="핀더가든 이름"
        android:textSize="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="11dp"
        android:textStyle="bold"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/cardView7" />

    <TextView
        android:id="@+id/pindergartenAddress"
        android:layout_width="250dp"
        android:layout_height="14dp"
        android:layout_marginLeft="16dp"
        android:singleLine="true"
        android:text="핀더가든 주소"
        android:textSize="12dp"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/pindergartenName" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/pindergartenAddress">

        <TextView
            android:id="@+id/rating_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5/5"
            android:textSize="12dp"/>

        <RatingBar
            android:id="@+id/pindergartenRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="5dp"
            android:isIndicator="false"
            android:progressTint="@color/yellow_white"
            style="?android:attr/ratingBarStyleSmall" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

