<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.example.pindergarten_android.PindergartenViewModel"/>
        <variable
            name="activity"
            type="com.example.pindergarten_android.Join3Activity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="89dp"
            android:src="@drawable/join2_line2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/transparency"
            android:padding="5dp"
            android:onClick="@{activity::btnClick}"
            android:scaleType="fitCenter"
            android:src="@drawable/back_btn"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:text="기본정보"
            android:textColor="#424242"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:text="계정 이름"
            android:textSize="14dp"
            android:textColor="#5A5A5A"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="235dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/login_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <EditText
            android:id="@+id/id"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:backgroundTint="@color/white"
            android:hint="2자이상 입력해주세요"
            android:paddingLeft="0dp"
            android:singleLine="true"
            android:textSize="14dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*영문으로 입력해주세요"
            android:textColor="@color/brown"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:textSize="11dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <ImageButton
            android:id="@+id/confirmIdBtn"
            android:layout_width="92dp"
            android:layout_height="32dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="16dp"
            android:backgroundTint="@color/white"
            android:onClick="@{activity::btnClick}"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/join3_confirm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />


        <ImageButton
            android:id="@+id/finishBtn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="32dp"
            android:onClick="@{activity::btnClick}"
            android:src="@drawable/join3_finish"
            android:scaleType="fitCenter"
            android:backgroundTint="#00ff0000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="*계정을 만들면 핀더가든의 개인 정보 취급 방침 및 이용 약관에 동의하게 됩니다."
            android:textColor="@color/brown"
            android:textSize="10dp"
            android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toTopOf="@+id/finishBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>