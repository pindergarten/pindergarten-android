<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.example.pindergarten_android.PindergartenViewModel"/>
        <variable
            name="activity"
            type="com.example.pindergarten_android.SplashActivity" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_img">

        <ImageButton
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="550dp"
            android:scaleType="fitCenter"
            android:onClick="@{activity::btnClick}"
            android:background="@drawable/splash_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/join"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:onClick="@{activity::btnClick}"
            android:background="@drawable/splash_join"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>