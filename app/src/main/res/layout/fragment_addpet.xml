<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:gravity="center_horizontal"
        android:text="펫 추가하기"
        android:textColor="#424242"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/transparency"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/back_btn"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addPostBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:textColor="#B6B6B6"
        android:layout_marginRight="16dp"
        android:text="등록"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:src="@drawable/addpost_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="72dp"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/petImgLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" >

        <ImageView
            android:id="@+id/petImg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/petimg" />

        <ImageButton
            android:id="@+id/petImgBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/transparency"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:layout_alignEnd="@+id/petImg"
            android:layout_alignRight="@+id/petImg"
            android:src="@drawable/addpet_photo" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/petImgLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textStyle="bold"
            android:textColor="#5A5A5A"
            android:textSize="14dp"/>

        <EditText
            android:id="@+id/petName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:singleLine="true"
            android:backgroundTint="@color/transparency"
            android:hint="이름을 입력해주세요."/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@drawable/login_line"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="반려견 성별"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="#5A5A5A"
            android:textSize="14dp"/>

        <RadioGroup
            android:id="@+id/genderGroup"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_height="30dp">

            <RadioButton
                android:layout_weight="1"
                android:text="여자아이"
                android:textSize="13dp"
                android:id="@+id/female"
                android:layout_width="0dp"
                android:buttonTint="@color/brown"
                android:layout_height="wrap_content"
                android:textColor="@drawable/radio_btn_text"
                android:drawablePadding="5dp" />

            <RadioButton
                android:layout_weight="1"
                android:text="남자아이"
                android:textSize="13dp"
                android:id="@+id/male"
                android:layout_width="0dp"
                android:buttonTint="@color/brown"
                android:layout_height="wrap_content"
                android:textColor="@drawable/radio_btn_text"
                android:drawablePadding="5dp" />

        </RadioGroup>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@drawable/login_line"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="품종"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="#5A5A5A"
            android:textSize="14dp"/>

        <EditText
            android:id="@+id/petCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:singleLine="true"
            android:backgroundTint="@color/transparency"
            android:hint="반려견 견종을 입력해주세요."/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@drawable/login_line"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="반려견 생년월일"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="#5A5A5A"
            android:textSize="14dp"/>

        <EditText
            android:id="@+id/petInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:singleLine="true"
            android:editable="false"
            android:backgroundTint="@color/transparency"
            android:hint="생년월일과 나이를 입력해주세요."/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@drawable/login_line"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예방접종 여부"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="#5A5A5A"
            android:textSize="14dp"/>

        <RadioGroup
            android:id="@+id/preventGroup"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_height="30dp">

            <RadioButton
                android:layout_weight="1"
                android:text="했어요"
                android:textSize="13dp"
                android:id="@+id/prevent_yes"
                android:layout_width="0dp"
                android:buttonTint="@color/brown"
                android:layout_height="wrap_content"
                android:textColor="@drawable/radio_btn_text"
                android:drawablePadding="5dp" />

            <RadioButton
                android:layout_weight="1"
                android:text="안했어요"
                android:textSize="13dp"
                android:id="@+id/prevent_no"
                android:layout_width="0dp"
                android:buttonTint="@color/brown"
                android:layout_height="wrap_content"
                android:textColor="@drawable/radio_btn_text"
                android:drawablePadding="5dp" />

        </RadioGroup>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@drawable/login_line"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="중성화"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="#5A5A5A"
            android:textSize="14dp"/>

        <RadioGroup
            android:id="@+id/neuteringGroup"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_height="30dp">

            <RadioButton
                android:layout_weight="1"
                android:text="했어요"
                android:textSize="13dp"
                android:id="@+id/neutering_yes"
                android:layout_width="0dp"
                android:buttonTint="@color/brown"
                android:layout_height="wrap_content"
                android:textColor="@drawable/radio_btn_text"
                android:drawablePadding="5dp" />

            <RadioButton
                android:layout_weight="1"
                android:text="안했어요"
                android:textSize="13dp"
                android:id="@+id/neutering_no"
                android:layout_width="0dp"
                android:buttonTint="@color/brown"
                android:layout_height="wrap_content"
                android:textColor="@drawable/radio_btn_text"
                android:drawablePadding="5dp" />

        </RadioGroup>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@drawable/login_line"/>

    </LinearLayout>
    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>